{
  "name": "@paladin-bladesmith/sdk",
  "version": "0.1.0",
  "description": "SDK for Paladin programs with React integration",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "solana",
    "blockchain",
    "paladin",
    "react"
  ],
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.90.0",
    "borsh": "^2.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "@solana/wallet-adapter-react": "^0.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.0",
    "@solana/wallet-adapter-react": "^0.15.0",
    "@solana/wallet-adapter-base": "^0.9.23",
    "react": "^18.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.3.3"
  }
} 